<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:padding="10dp"
        android:id="@+id/background_gradient">

        <ImageView
            android:id="@+id/com_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/idea_image"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/com_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoing_works"
            android:layout_toRightOf="@id/com_image"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/muli_black"
            android:layout_marginStart="15dp" />

        <RatingBar
            android:id="@+id/com_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginTop="5dp"
            android:layout_below="@id/com_title"
            android:layout_toEndOf="@id/com_image"
            android:layout_marginStart="15dp"
            android:rating="4"/>

        <TextView
            android:id="@+id/com_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoing_works"
            android:layout_below="@id/com_rating"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/com_image" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>